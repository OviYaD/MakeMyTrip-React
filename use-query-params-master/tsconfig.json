{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES6",
    "lib": [
      "dom",
      "esnext",
      "DOM.Iterable"
    ],
    "importHelpers": true,
    "isolatedModules": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "paths": {
      "use-query-params": [
        "packages/use-query-params/src"
      ],
      "serialize-query-params": [
        "packages/serialize-query-params/src"
      ]
    }
  }
}